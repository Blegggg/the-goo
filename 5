# Open login/signup page again
def open_login_page(homepage):
    homepage.destroy()  # Close the homepage window
    root.deiconify()  # Show the login/signup window again

# Placeholder functions for the new pages
def open_carbon_page():
    page = tk.Tk()
    page.title("Carbon Footprint")
    page.geometry("400x300")
    label = tk.Label(page, text="Carbon Footprint Page", font=("Arial", 16, "bold"))
    label.pack(pady=20)
    page.mainloop()

