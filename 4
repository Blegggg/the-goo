# Open the homepage after successful login
def open_homepage():
    # Hide the login/signup window and open the homepage
    root.withdraw()  # Hide the login window

    homepage = tk.Tk()
    homepage.title("Homepage")
    homepage.geometry("400x500")
    
    label = tk.Label(homepage, text="Welcome to the Homepage!", font=("Arial", 16, "bold"))
    label.pack(pady=20)

    # Add buttons for different pages
    carbon_button = tk.Button(homepage, text="Carbon Footprint", command=open_carbon_page, bg="green", fg="white", font=("Arial", 12))
    carbon_button.pack(pady=10)

    info_button = tk.Button(homepage, text="Information", command=open_info_page, bg="green", fg="white", font=("Arial", 12))
    info_button.pack(pady=10)

    energy_button = tk.Button(homepage, text="Energy Usage Calculator", command=open_energy_calculator, bg="green", fg="white", font=("Arial", 12))
    energy_button.pack(pady=10)

    logout_button = tk.Button(homepage, text="Logout", command=lambda: open_login_page(homepage), bg="red", fg="white", font=("Arial", 12))
    logout_button.pack(pady=10)

    # Add bottom navigation bar to resemble phone app
    bottom_nav = tk.Frame(homepage, bg="green")
    bottom_nav.pack(side="bottom", fill="x", pady=10)

    button1 = tk.Button(bottom_nav, text="Home", command=open_homepage, bg="green", fg="white")
    button1.pack(side="left", expand=True)

    button2 = tk.Button(bottom_nav, text="Carbon", command=open_carbon_page, bg="green", fg="white")
    button2.pack(side="left", expand=True)

    button3 = tk.Button(bottom_nav, text="Info", command=open_info_page, bg="green", fg="white")
    button3.pack(side="left", expand=True)

    button4 = tk.Button(bottom_nav, text="Energy", command=open_energy_calculator, bg="green", fg="white")
    button4.pack(side="left", expand=True)

    homepage.mainloop()
